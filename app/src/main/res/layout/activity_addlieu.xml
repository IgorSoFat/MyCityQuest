<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/backmobile"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="asus.mycityquest.addLieuActivity">

    <!-- Login progress -->
    <LinearLayout
        android:id="@+id/add_lieu_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/nomAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nom"
            android:textColorHint="#000000"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1" />

        <AutoCompleteTextView
            android:id="@+id/adresseAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Adresse"
            android:textColorHint="#000000"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1" />

        <AutoCompleteTextView
            android:id="@+id/villeAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ville"
            android:textColorHint="#000000"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:text="CatÃ©gorie"
            android:textColor="#000000"
            />

        <Spinner
            android:id="@+id/listType"
            android:layout_width="172dp"
            android:textColorHint="#000000"
            android:layout_height="39dp"></Spinner>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/descAdd"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:minWidth="1dp"
            android:ems="9"
            android:hint="Description ..."
            android:textColorHint="#000000"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/lieu_valid_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Valider"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
